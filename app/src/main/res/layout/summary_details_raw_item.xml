<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txt_task"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center"
            android:text="@string/app_name"
            android:fontFamily="@font/opensanssemibold"
            android:textSize="16sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:text="@string/sum_msg1"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/opensanssemibold"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/txt_used_clue"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="5"
                android:textSize="14sp"
                android:fontFamily="@font/opensansregular"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/txt_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:text="@string/sum_msg2"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/opensanssemibold"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_10">
                <TextView
                    android:id="@+id/txt_wrong_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/opensansregular"
                    android:gravity="center_vertical"
                    android:textColor="@color/txt_color"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:text="@string/sum_msg3"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/opensanssemibold"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_10">
                <TextView
                    android:id="@+id/txt_skipped"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/opensansregular"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:text="@string/sum_msg4"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/opensanssemibold"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_10">
                <TextView
                    android:id="@+id/txt_used_save_me"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/opensansregular"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:text="@string/sum_msg5"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/opensanssemibold"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/txt_task_point"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="5"
                android:textSize="14sp"
                android:fontFamily="@font/opensansregular"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/txt_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:text="@string/sum_msg6"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/opensanssemibold"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/txt_consecutive_point"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="5"
                android:textSize="14sp"
                android:fontFamily="@font/opensansregular"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/txt_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:text="@string/sum_msg7"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/opensanssemibold"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/txt_score_per_Task"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="5"
                android:textSize="14sp"
                android:fontFamily="@font/opensansregular"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/txt_color"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>

</RelativeLayout>