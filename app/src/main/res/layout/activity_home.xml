<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity"
    android:background="@drawable/homescreengray"
    android:fitsSystemWindows="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="45dp"
                app:cardUseCompatPadding="true"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                >
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:text="@string/buyer_scenario"
                    android:textSize="@dimen/txt_size"
                    android:textStyle="bold"
                    android:textColor="@color/txt_color"
                    android:gravity="center"
                    android:background="@drawable/txt_round_bg"
                    android:visibility="gone"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:layout_gravity="center"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="@string/thank_you"
                    android:textSize="@dimen/txt_size"
                    android:textStyle="bold"
                    android:textColor="@color/txt_color"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/txt_round_bg"
                    android:visibility="gone"
                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="260dp"
                app:cardUseCompatPadding="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/txt_round_bg"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="@string/invite_friend"
                        android:textSize="@dimen/txt_size"
                        android:textStyle="bold"
                        android:textColor="@color/txt_color"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        app:cardBackgroundColor="@color/grey">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/txt_reg_code"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:textSize="@dimen/invite_code"
                                android:fontFamily="@font/opensansbold"
                                android:textColor="@color/red"
                                android:gravity="center"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <androidx.cardview.widget.CardView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            app:cardUseCompatPadding="true"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp">
                            <ImageView
                                android:id="@+id/img_copycode"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/copy"
                                android:layout_gravity="center"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            app:cardUseCompatPadding="true"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp"
                            android:layout_marginLeft="5dp">
                            <ImageView
                                android:id="@+id/img_sendgmail"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/gmail"
                                android:layout_gravity="center"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            app:cardUseCompatPadding="true"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp"
                            android:layout_marginLeft="5dp">
                            <ImageView
                                android:id="@+id/img_sendwhatsapp"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/whatsapp"
                                android:layout_gravity="center"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>



                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <ImageView
                android:layout_width="101dp"
                android:layout_height="73dp"
                android:src="@drawable/start_point"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/starting_point"
                android:textColor="@color/white"
                android:textSize="@dimen/sub_txt_size"
                android:textAlignment="center"/>


                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="@string/next_btn"
                    android:textSize="@dimen/btn_txt_size"
                    android:fontFamily="@font/opensanssemibold"
                    android:textColor="@color/btn_txt_color"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_shape_bg"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>