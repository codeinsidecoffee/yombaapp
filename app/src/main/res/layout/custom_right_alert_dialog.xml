<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="0dp"
    >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/txt_amazing"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:text="@string/right_answer"
                    android:textSize="@dimen/alert_text"
                    android:fontFamily="@font/opensansbold"
                    android:textAlignment="center"
                    android:textColor="@color/txt_amazing"
                    />

                <ImageView
                    android:id="@+id/img_yomba_men"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/ic_yomba_men"
                    android:layout_alignParentRight="true"

                    />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_above="@+id/img_yomba_men"
                    android:background="@drawable/ic_right"
                    android:layout_alignParentRight="true"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="210dp"
                    android:layout_height="70dp"
                    app:cardUseCompatPadding="true"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/img_yomba_men"
                    android:visibility="gone"
                    app:cardElevation="0dp">
                    <Button
                        android:id="@+id/btn_right"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="@string/next_btn"
                        android:textSize="@dimen/btn_txt_size"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:fontFamily="@font/opensanssemibold"
                        android:layout_gravity="center"
                        android:background="@drawable/blue_btn_shape"
                        />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>