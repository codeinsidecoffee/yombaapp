<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@android:color/transparent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <androidx.cardview.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="0dp"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_clue_no"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/get_your_clue"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:fontFamily="@font/opensansbold"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:background="@color/term_heading"
                    />
                <ImageView
                    android:id="@+id/image_media_clue"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:visibility="gone"
                    android:padding="5dp"
                    />
                <TextView
                    android:id="@+id/txt_media_clue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensansbold"
                    android:text="Justify Given Image in Your Word?"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:padding="5dp"/>
                <VideoView
                    android:id="@+id/video_media_clue"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:visibility="gone"
                    android:padding="5dp"/>


                <androidx.cardview.widget.CardView
                    android:layout_width="210dp"
                    android:layout_height="70dp"
                    app:cardUseCompatPadding="true"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp">
                    <Button
                        android:id="@+id/btn_ok"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:text="@string/btn_ok"
                        android:textSize="@dimen/btn_txt_size"
                        android:textColor="@color/white"
                        android:fontFamily="@font/opensanssemibold"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/blue_btn_shape"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/alert_relative_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightblack"
        android:visibility="gone">
        <ImageView
            android:id="@+id/alert_progress_dialog"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:visibility="visible"/>

    </RelativeLayout>

</RelativeLayout>