<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity"
    android:background="@drawable/homescreen"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:id="@+id/linear_exit"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_shape_bg"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:clickable="true"
        >
        <TextView
            android:id="@+id/txt_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exit"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/opensansbold"
            android:textSize="@dimen/btn_txt_size"
            android:textAlignment="center"
            android:background="@drawable/btn_shape_bg"
            android:gravity="center"
            android:clickable="false"
            />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/ic_exit"
            android:scaleX="-1"
            android:layout_marginLeft="5dp"
            android:backgroundTint="@color/solve_btn_color"
            android:clickable="false"
            android:visibility="gone"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_above="@+id/bottomcard"
        android:textSize="@dimen/about_game_txt"
        android:text="@string/about_msg4"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginBottom="40dp"/>

        <LinearLayout
            android:id="@+id/bottomcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/crad_top_round_corner"
            android:layout_alignParentBottom="true"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_gravity="center"
                android:paddingTop="10dp">
            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_above="@+id/bottomview"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layerType="hardware"
                tools:ignore="WebViewLayout"
                />
            </ScrollView>
            <LinearLayout
                android:id="@+id/bottomview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:background="@color/white"
                android:visibility="gone">
                <androidx.cardview.widget.CardView
                    android:layout_width="210dp"
                    android:layout_height="70dp"
                    app:cardUseCompatPadding="true"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="10dp"
                    >
                    <Button
                        android:id="@+id/btn_start"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:text="@string/start_play"
                        android:fontFamily="@font/opensanssemibold"
                        android:textSize="@dimen/btn_txt_size"
                        android:textColor="@color/btn_txt_color"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_shape_bg"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/footer_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/btn_shape_bg"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_left_arrow"
                        android:padding="7dp"/>
                    <TextView
                        android:id="@+id/txt_back"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/back_btn"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/opensansbold"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:paddingRight="10dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/btn_shape_bg"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:visibility="visible">
                    <TextView
                        android:id="@+id/txt_start"
                        android:layout_width="210dp"
                        android:layout_height="30dp"
                        android:text="@string/start_play"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/opensansbold"
                        android:textSize="@dimen/btn_txt_size"
                        android:textAlignment="center"
                        android:layout_marginLeft="10sp"
                        android:background="@drawable/btn_shape_bg"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        />
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/men"
                        android:padding="7dp"
                        android:visibility="gone"/>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>


</RelativeLayout>