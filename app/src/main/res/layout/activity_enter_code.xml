<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity"
    android:background="@drawable/homescreen"
    android:fitsSystemWindows="true">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/change_lang"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                />
            <Spinner
                android:id="@+id/select_lang"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@null"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="45dp"
            app:cardUseCompatPadding="true"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:text="@string/buyer_scenario"
                android:textSize="@dimen/txt_size"
                android:textStyle="bold"
                android:textColor="@color/txt_color"
                android:gravity="center"
                android:background="@drawable/txt_round_bg"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:cardUseCompatPadding="true"
            android:layout_gravity="end"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp"
            android:visibility="gone">
            <TextView
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:text="@string/invitee_scenario"
                android:textSize="@dimen/txt_size"
                android:textStyle="bold"
                android:textColor="@color/txt_color"
                android:gravity="center"
                android:background="@drawable/txt_round_bg"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="210dp"
            android:layout_height="210dp"
            app:cardUseCompatPadding="true"
            android:layout_gravity="center"
            app:cardElevation="0dp"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_marginTop="@dimen/logo_vertical_space"
            app:cardBackgroundColor="@android:color/transparent"
            >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:cardUseCompatPadding="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/txt_round_bg"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="@string/game_code"
                    android:textSize="@dimen/txt_size"
                    android:textStyle="bold"
                    android:fontFamily="@font/opensansbold"
                    android:textColor="@color/txt_color"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                  />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <EditText
                        android:id="@+id/edt1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:textAlignment="center"
                        android:singleLine="true"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:fontFamily="@font/opensanssemibold"
                        android:imeOptions="actionNext"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittext_shape_bg"/>


                    <EditText
                        android:id="@+id/edt2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/opensanssemibold"
                        android:textAlignment="center"
                        android:singleLine="true"
                        android:maxLength="1"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittext_shape_bg"/>

                    <EditText
                        android:id="@+id/edt3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/opensanssemibold"
                        android:textAlignment="center"
                        android:singleLine="true"
                        android:maxLength="1"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittext_shape_bg"/>

                    <EditText
                        android:id="@+id/edt4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/opensanssemibold"
                        android:textAlignment="center"
                        android:singleLine="true"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittext_shape_bg"/>

                    <EditText
                        android:id="@+id/edt5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/opensanssemibold"
                        android:textAlignment="center"
                        android:singleLine="true"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittext_shape_bg"/>

                    <EditText
                        android:id="@+id/edt6"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/opensanssemibold"
                        android:textAlignment="center"
                        android:singleLine="true"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittext_shape_bg"/>



                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/verification_code"
                    android:textSize="@dimen/sub_txt_size"
                    android:textColor="@color/txt_color"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/txt_resend"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/resend_txt"
                    android:textSize="@dimen/sub_txt_size"
                    android:textColor="@color/txt_color"
                    android:gravity="center"
                    android:visibility="gone"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="210dp"
                    android:layout_height="70dp"
                    app:cardUseCompatPadding="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="0dp">
                <Button
                    android:id="@+id/btn_verify"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="@string/verify_btn"
                    android:textSize="@dimen/btn_txt_size"
                    android:fontFamily="@font/opensanssemibold"
                    android:textColor="@color/btn_txt_color"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_shape_bg"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>


</RelativeLayout>